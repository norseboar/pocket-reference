{
  "manifest_version": 2,
  "name": "Pocket Reference",
  "version": "0.1.0",

  "permissions": [
    "contextMenus",
    "https://pocket-reference.herokuapp.com/"
  ],

  "description": "Save facts you read to Pocket Reference",
  "icons": {},

  "browser_action": {
    "default_title": "Save to Pocket Reference",
    "default_popup": "popup.html"
  },
  "author": "Reed Molbak",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "short_name": "Pocket Ref"
}
