<script src="scripts/claims.js" defer></script>
<div class="container claims">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" >
  </div>
  <div class="form-group">
    <label for="url">URL</label>
    <input type="text" class="form-control" id="url">
  </div>
  <button type="submit" class="btn btn-warning btn-md" id="add-claim">
      Add</button>
  <br/>
  <br/>
  <!-- <ul class="list-group"> -->
    {{#each user.claims}}
      <!-- <li class="list-group-item"> -->
        <div class="col-md-4 col-sm-6">
          <a class="claim-link" href="{{url}}" target="_blank">
            <div class="claim">
              <span class="claim-text"><p>{{claimText}}</p></span>
              <div class="page-title">
                <p>
                  <img src="{{imgSrc}}">{{pageTitle}}
                </p>
              </div>
            </div>
          </a>
        </div>
    {{/each}}
</div>
